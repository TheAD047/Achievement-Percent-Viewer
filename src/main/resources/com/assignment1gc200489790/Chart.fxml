<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.assignment1gc200489790.Controllers.ChartController">
   <children>
      <BorderPane layoutX="188.0" layoutY="68.0" prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <Label fx:id="sceneTitle" text="Select A Game" textAlignment="CENTER" BorderPane.alignment="CENTER">
               <font>
                  <Font size="29.0" />
               </font>
            </Label>
         </top>
         <center>
            <BarChart fx:id="chart" prefHeight="400.0" prefWidth="1024.0" title="Achievements" BorderPane.alignment="CENTER">
              <xAxis>
                <CategoryAxis fx:id="yAxis" animated="false" side="BOTTOM" />
              </xAxis>
              <yAxis>
                <NumberAxis side="LEFT" fx:id="xAxis" />
              </yAxis>
            </BarChart>
         </center>
         <bottom>
            <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
              <buttons>
                  <ComboBox fx:id="gameComboBox" onAction="#changeGame" prefHeight="56.0" prefWidth="537.0" />
                <Button fx:id="goToGamesButton" mnemonicParsing="false" onAction="#getGamesView" text="See Game List" textAlignment="CENTER">
                     <font>
                        <Font size="25.0" />
                     </font>
                  </Button>
              </buttons>
            </ButtonBar>
         </bottom>
      </BorderPane>
   </children>
</AnchorPane>
